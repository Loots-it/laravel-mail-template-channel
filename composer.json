{
    "name": "loots-it/laravel-mail-template-channel",
    "description": "An alternative for the standard mail channel that uses an external template for its content. An example of such a service that provides such templates is Mailjet, for which the implementation is provided.",
    "keywords": [
        "mail",
        "mailjet",
        "mailtemplate",
        "laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Laurens Loots",
            "email": "laurens@loots-it.be"
        }
    ],
    "autoload": {
        "psr-4": {
            "LootsIt\\LaravelMailTemplateChannel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LootsIt\\LaravelMailTemplateChannel\\Tests\\": "tests/",
            "Tests\\": "vendor/laravel/laravel/tests/"
        }
    },
    "require": {
        "laravel/framework": "^8.0",
        "mailjet/mailjet-apiv3-php": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "laravel/laravel": "^8.0",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1"
    },
    "extra": {
        "laravel": {
            "providers": [
                "LootsIt\\LaravelMailTemplateChannel\\MailTemplateDriverServiceProvider"
            ]
        }
    }
}
